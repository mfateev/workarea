{
  "permissions": {
    "allow": [
      "Bash(./bin/setup-task-workspace.sh:*)",
      "Bash(./bin/new-workspace.sh:*)",
      "Bash(./bin/clone-workspace.sh:*)",
      "Bash(./bin/detach-workspace.sh:*)",
      "Bash(./bin/migrate-to-workspaces.sh:*)",
      "Bash(./bin/resume-task.sh:*)",
      "Bash(./bin/find-task.sh:*)",
      "Bash(./bin/list-tasks.sh:*)",
      "Bash(git worktree:*)",
      "Bash(git fetch:*)",
      "Bash(git remote add:*)",
      "Bash(git reset:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(gh repo view:*)",
      "Bash(chmod:*)",
      "./gradlew runIdeForUiTests & sleep 3"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./bin/list-tasks.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/directory-structure-check.sh",
            "statusMessage": "Validating directory structure..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/git-safety-check.sh",
            "statusMessage": "Validating git operation..."
          }
        ]
      }
    ]
  }
}
